  linode: ${5:api_key=${6: } }${7:datacenter=${8: } }${9:distribution=${10: } }${11:linode_id=${12: } }${13:name=${14: } }${15:password=${16: } }${17:payment_term=${18: } }${19:plan=${20: } }${21:ssh_pub_key=${22: } }${23:state=${24: } }${25:swap=${26: } }${27:wait=${28: } }${29:wait_timeout=${30: } }
